body {
  margin: 0;
  padding: 0;
  background: #151515;
  font-family: "Lucida Grande";
  font-size: 14px;
  line-height: 20px;
  color: #E6E6E6;
}

a {
  color: #000;
}

.header {
  background-image: linear-gradient(top, #393939, #000000);
  height: 80px;
  padding-top: 5px;
  .badge {
    float: right;
    margin: 15px 0 0 0;
  }
}

.content {
  background: #4B5363;
  border: 1px solid #818893;
  border-width: 1px 0;
}

.badge {
  width: 156px;
  height: 47px;
  display: block;
  background: url(../images/mac-store-badge.png);
  background-size: 156px 47px;
  span {
    display: none;
  }
}

.frame {
  width: 680px;
  margin: 0 auto;
}

.hl {
  margin: 0;
  padding: 0;
  list-style: none;
  li {
    display: inline-block;
  }
}

.logo {
  font-family: "Lucida Grande", Helvetica, Arial;
  font-size: 48px;
  color: #fff;
  text-decoration: none;
  height: 74px;
  line-height: 74px;
  display: block;
  background: url(../images/icon.png) no-repeat;
  padding-left: 90px;
  background-size: 74px 74px;
}

.footer {
  font-size: 12px;
  line-height: 75px;

  .hl {
    float: right;
    li {
      a {
        border-right: 1px solid #e6e6e6;
        padding: 0 15px;
        color: #e6e6e6;
      }
      a.last {
        border-right: 0;
        padding-right: 0;
      }
    }
  }
}

@import "homepage.styl"

//Footer
dl {
  dt {
    margin: 10px 0;
    font-weight: bold;
  }
  dd {
    margin: 0;
  }
}
