#homepage {
  .header {

    height: 385px;

    .logo {
      margin: 130px 20px 0 0;
      float: left;
    }
    
    img {
      margin: 40px 0 0 0;
    }
  }

  .content {
    .badge-container {
      width: 240px;
      height: 100px;
      float: left;
      padding-top: 25px;
    }
    .badge {
      margin-left: 25px;
    }

    .copy {
      margin: 30px 0;
      text-shadow: 1px 1px 2px #000;
    }

    .screenshots {
      margin-bottom: 30px;

      li {
        margin: 0 0 0 32px;
        a {
          display: block;
          padding: 8px;
          background: #fff;
          border: 1px solid #161616;

          &:hover {
            position: relative;
            top: -2px;
          }
        }
      }
      li:first-child {
        margin-left: 0;
      }
    }
  }
  @import "modal.styl"
}
